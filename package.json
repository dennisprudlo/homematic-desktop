{
  "name": "homematic-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "An electron interface for the homematic xml-api add-on.",
  "productName": "Homematic Desktop",
  "author": {
    "name": "Dennis Prudlo",
    "email": "mail@dennisprudlo.com",
    "url": "https://dennisprudlo.com"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "IS_TEST=0 vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
